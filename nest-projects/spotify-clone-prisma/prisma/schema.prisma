generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  password  String
  playlists Playlists[]
  artists   Artists?
}

model Songs {
  id           Int            @id @default(autoincrement())
  title        String
  releasedDate DateTime
  duration     DateTime
  lyrics       String?
  artists      ArtistsSongs[]
}

model Playlists {
  id      Int    @id @default(autoincrement())
  name    String
  owner   Users  @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model Artists {
  userId Int            @id
  user   Users          @relation(fields: [userId], references: [id])
  songs  ArtistsSongs[]
}

model ArtistsSongs {
  song   Songs    @relation(fields: [songId], references: [id])
  artist Artists? @relation(fields: [artistId], references: [userId])

  songId   Int
  artistId Int

  @@id([songId, artistId])
}
